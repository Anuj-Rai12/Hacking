<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/image_holder"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/hacking_main_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/patrick_hand"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/image_holder"
        app:layout_constraintRight_toRightOf="@id/image_holder"
        app:layout_constraintTop_toBottomOf="@id/image_holder"
        tools:text="Anuj Kumar Rai" />

    <TextView
        android:id="@+id/title_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:textColor="@color/forget_text_color"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_outline_email_24"
        app:drawableTint="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/title_txt"
        app:layout_constraintRight_toRightOf="@id/title_txt"
        app:layout_constraintTop_toBottomOf="@id/title_txt"
        tools:text="Anujrai04082002.0@gmail.com" />
</androidx.constraintlayout.widget.ConstraintLayout>