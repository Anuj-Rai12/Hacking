<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="referralDetailsViewModel"
            type="com.uptodd.uptoddapp.ui.refer.referdetails.ReferDetailsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.refer.referdetails.ReferDetailsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ellipse_landscape"
                android:contentDescription="@string/ellipse"/>

            <TextView
                android:id="@+id/referral_details_referral_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:text="@{referralDetailsViewModel.referralName}"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/referral_details_email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/email"
                android:textColor="@color/textGrey"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                app:layout_constraintStart_toStartOf="@+id/referral_details_referral_name"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />

            <EditText
                android:id="@+id/referral_details_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_edittext"
                android:text="@={referralDetailsViewModel.referralEmail}"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:ems="15"
                android:padding="8dp"
                android:textColor="@color/textGrey"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/referral_details_email_text"
                app:layout_constraintTop_toBottomOf="@+id/referral_details_email_text" />

            <TextView
                android:id="@+id/referral_details_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/phone"
                android:textColor="@color/textGrey"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                app:layout_constraintStart_toStartOf="@+id/referral_details_email"
                app:layout_constraintTop_toBottomOf="@+id/referral_details_email" />

            <EditText
                android:id="@+id/referral_details_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_edittext"
                android:padding="8dp"
                android:text="@={referralDetailsViewModel.referralPhone}"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColor="@color/textGrey"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="@+id/referral_details_email"
                app:layout_constraintStart_toStartOf="@+id/referral_details_phone_text"
                app:layout_constraintTop_toBottomOf="@+id/referral_details_phone_text" />

            <LinearLayout
                android:id="@+id/referral_details_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/referral_details_phone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/referral_details_layout1_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/referral_date"
                        android:textColor="@color/textGrey"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat" />

                    <EditText
                        android:id="@+id/referral_details_layout1_field2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/round_edittext"
                        android:padding="8dp"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@={referralDetailsViewModel.referralDate}"
                        android:textColor="@color/textGrey"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/referral_details_layout2_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/registration_date"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/referral_details_layout2_field2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/round_edittext"
                        android:padding="8dp"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@={referralDetailsViewModel.referralRegistrationDate}"
                        android:textColor="@color/textGrey"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/referral_details_layout3_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:text="@string/status"
                android:textColor="@color/textGrey"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/referral_details_layout2"/>

            <EditText
                android:id="@+id/referral_details_layout3_field2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_edittext"
                android:padding="8dp"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="@={referralDetailsViewModel.referralStatus}"
                android:textColor="@color/textGrey"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/referral_details_layout3_text2"/>

            <Button
                android:id="@+id/referral_details_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button_login"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/referral_details_layout3_field2" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>