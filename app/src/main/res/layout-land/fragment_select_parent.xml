<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.selectparent.SelectParentFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/rounded_corners_text_view_login"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/you_are_baby_s"
            android:textColor="@color/themeBlue"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <ImageButton
            android:id="@+id/imageButton_mother"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/circle_blue_stroke_white_fill"
            android:src="@drawable/choose_parent_mother_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButton_guardian"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.153"
            android:contentDescription="@string/mother"/>

        <ImageButton
            android:id="@+id/imageButton_guardian"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/circle_blue_stroke_white_fill"
            android:src="@drawable/choose_parent_gaurdian_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButton_father"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageButton_mother"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.154"
            android:contentDescription="@string/guardian"/>

        <ImageButton
            android:id="@+id/imageButton_father"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/circle_blue_stroke_white_fill"
            android:src="@drawable/choose_parent_father_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageButton_guardian"
            app:layout_constraintTop_toTopOf="@+id/imageButton_mother"
            app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/father"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/mother"
            android:textColor="@color/themeBlue"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageButton_mother"
            app:layout_constraintStart_toStartOf="@+id/imageButton_mother"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_mother" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/guardian"
            android:textColor="@color/themeBlue"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageButton_guardian"
            app:layout_constraintStart_toStartOf="@+id/imageButton_guardian"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_guardian" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/father"
            android:textColor="@color/themeBlue"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageButton_father"
            app:layout_constraintStart_toStartOf="@+id/imageButton_father"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_father" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>