<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.webinars.fullwebinar.FullWebinarActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:id="@+id/layout">


        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.youtube.player.YouTubePlayerView>

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/videoView"
            app:layout_constraintBottom_toTopOf="@id/btnPlayPause">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/videoTime"
                        android:layout_width="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="14dp"
                        android:textStyle="bold"
                        android:text="00:00"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        />
                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="0"
                        />



                </LinearLayout>



                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                 />

                <TextView
                    android:id="@+id/kit_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="heovopjveskll"
                    android:textColor="@color/textGrey"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/crimson_text_bold"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="The lentils  are a good source of fibre and vitamins as well as low fat, cholesterol, and sodium, all of which are essential for the growth and development of a baby . But you need to give them in moderation to your baby.\n\n What we need in ingredients?- We need\n1 Tbsp oil\n1 small onion, diced\n1 Large Carrot, peeled and cut into a small dice\n1 Garlic Clove\n1 Tsp fresh ginger, minced\n2 Tsp curry powder\n1 Tsp cumin\n1 Tsp turmeric\n2 Cups water\n2 Tsp kosher salt\n1 14 oz Can Tomato Puree\n1 Cups Red Lentils, rinsed well\n Brown or White Basmati Rice\n \nMethod-\n1. Heat the oil in a large saucepan over medium heat.\n2. Saute the onions and carrots for 4 minutes.\n3. Add the garlic, ginger, curry, cumin and turmeric and cook for 2 minutes.\n4. Add the lentils, water, salt and tomato puree and bring to a boil.\n5. Stir, cover, reduce heat to a simmer and cook for 35 minutes or until creamy and tender.\n6. Serve it with basmati rice.\n*Allow to cool, store in an appropriate container or ziploc bag, label and freeze for up to 4 months. When ready, defrost in the fridge for 24 hours or place in a pot and bring to heat over low-medium heat.\n \nDisclaimer- Please, be careful with knives, donâ€™t cook recipes with ingredients the baby is allergic to, and use your best judgement with raw ingredients. You are responsible to do the necessary research and make appropriate food-handling decisions for you and your baby.\n\n"
                    android:textSize="15sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/suggestedVideoTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suggested Videos"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/activeBlue"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/scrollView3"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sugVideoRecView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    tools:itemCount="3"
                    tools:listitem="@layout/suggested_video_item"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            </LinearLayout>
        </ScrollView>




        <Button
            android:id="@+id/btnPlayPause"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/buttonBlue"
            android:text="Play"
            android:textColor="@color/timeDisplayWhite"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>




</layout>