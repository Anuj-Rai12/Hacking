<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.uptodd.uptoddapp.ui.freeparenting.profile.childprofile.ChildProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_nav"
            layout="@layout/free_parenting_toolbar_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways" />

        <androidx.cardview.widget.CardView
            android:id="@+id/user_profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="17dp"
            app:cardBackgroundColor="@color/gradientCarouselIndicatorStartColor"
            app:cardCornerRadius="360dp"
            app:cardElevation="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_nav">

            <TextView
                android:id="@+id/child_profile_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical|center"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/type_profile_txt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/user_profile_pic"
            app:layout_constraintTop_toTopOf="@id/user_profile_pic" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#42c68e"
            android:fontFamily="@font/montserrat"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/user_profile_pic" />

        <TextView
            android:id="@+id/profile_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:paddingTop="2dp"
            android:text="N/A"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/user_profile_pic"
            app:layout_constraintRight_toLeftOf="@id/edit_btn"
            app:layout_constraintTop_toTopOf="@id/user_profile_pic" />

        <View
            android:id="@+id/border_line"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey"
            app:layout_constraintLeft_toLeftOf="@id/user_profile_pic"
            app:layout_constraintRight_toRightOf="@id/edit_btn"
            app:layout_constraintTop_toBottomOf="@id/user_profile_pic" />


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/montserrat"
            android:text="More Info"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/user_profile_pic"
            app:layout_constraintTop_toBottomOf="@id/border_line" />


        <TextView
            android:id="@+id/gender_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat"
            android:text="Gender"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/txt_title"
            app:layout_constraintTop_toBottomOf="@id/txt_title" />


        <TextView
            android:id="@+id/gender_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/edit_btn"
            app:layout_constraintTop_toTopOf="@id/gender_title" />


        <TextView
            android:id="@+id/age_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat"
            android:text="Age"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/txt_title"
            app:layout_constraintTop_toBottomOf="@id/gender_title" />


        <TextView
            android:id="@+id/age_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/edit_btn"
            app:layout_constraintTop_toTopOf="@id/age_title" />


        <View
            android:id="@+id/border_line_2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey"
            app:layout_constraintLeft_toLeftOf="@id/user_profile_pic"
            app:layout_constraintRight_toRightOf="@id/edit_btn"
            app:layout_constraintTop_toBottomOf="@id/age_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>