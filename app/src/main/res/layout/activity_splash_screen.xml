<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SplashScreenActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/uptodd_splash_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/uptodd_splash_image"
            app:srcCompat="@drawable/app_icon_text" />

        <ImageView
            android:id="@+id/uptodd_splash_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:background="#00000000"
            android:foreground="#00000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/uptodd_splash_text"
            app:layout_constraintStart_toStartOf="@+id/uptodd_splash_text"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/app_icon_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>