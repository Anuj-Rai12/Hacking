<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
   android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="8dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/up_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/crimson_text_bold"
            android:text="3 Months Personalised Program"
            android:textAlignment="center"
            android:textColor="@color/up_item_title_color"
            android:textSize="22sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/up_item_extra_color"
            android:layout_width="match_parent"
            android:textSize="13sp"
            android:textAlignment="center"
            android:fontFamily="@font/crimson_text_bold"
            android:layout_height="wrap_content"
            android:text="@string/up_program_plane_extra"
            ></TextView>



    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/up_key_feature"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        tools:listitem="@layout/key_item_layout"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:fontFamily="@font/crimson_text_bold"
        android:layout_height="wrap_content"
        android:text="key Feature"/>
    <TextView
        android:id="@+id/up_special"
        android:text="SPECIAL OFFER FOR YOU"
        android:layout_marginTop="5dp"
        android:padding="20dp"
        android:textColor="@color/up_item_sp_color"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:fontFamily="@font/crimson_text_bold"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/up_upgrade"
       android:layout_marginTop="5dp"
        android:padding="@dimen/activity_vertical_margin"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade Now"
        android:background="@color/buttonBlue"
        />
    <TextView
        android:id="@+id/up_original"
        android:text="Original Price"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:fontFamily="@font/crimson_text_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/up_emi"
        android:text="Emi"
        android:fontFamily="@font/crimson_text_bold"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>
</LinearLayout>
</layout>