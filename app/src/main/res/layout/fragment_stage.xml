<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.stage.StageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/rounded_corners_text_view_login"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/tell_us_your_stage"
            android:textColor="@color/themeBlue"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/pre_birth"
            android:textColor="@color/themeBlue"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageButton_pregnant"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/imageButton_pregnant"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_pregnant" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/post_birth"
            android:textColor="@color/themeBlue"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/imageButton_born"
            app:layout_constraintStart_toStartOf="@+id/imageButton_born"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_born" />

        <ImageButton
            android:id="@+id/imageButton_born"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_blue_stroke_white_fill"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_pregnant"
            android:src="@drawable/post_birth"
            android:contentDescription="@string/post_birth" />

        <ImageButton
            android:id="@+id/imageButton_pregnant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_blue_stroke_white_fill"
            app:layout_constraintBottom_toTopOf="@+id/imageButton_born"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:src="@drawable/pre_birth"
            android:contentDescription="@string/pre_birth" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>