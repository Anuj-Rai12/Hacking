<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="allTicketsBinding"
            type="com.uptodd.uptoddapp.support.all.AllTicketsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">



    <include
        android:id="@+id/collapseToolbar"
        layout="@layout/layout_collapase_toolbar"
        app:shouldShowPlay="@{true}"
        app:icon="@{@drawable/counselling_icon}"
        app:title="@{@string/expert_counselling}"
        />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".support.all.AllTicketsFragment"
        android:layout_marginBottom="120dp"
        >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".support.all.expert.ExpertTeam">

                <Button
                    android:id="@+id/generate_support_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:padding="8dp"
                    android:background="@drawable/round_button_new_ticket"
                    android:text="Raise support ticket"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/generate_expert_ticket"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/generate_expert_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_button_new_ticket"
                    android:text="Raise expert ticket"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/generate_support_ticket"
                    app:layout_constraintTop_toTopOf="@id/generate_support_ticket"/>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/generate_expert_ticket">

                    <LinearLayout
                        android:id="@+id/ticket_list_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView

                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_hourglass_empty_24" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/no_tickets_found"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_gravity="center" />
                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>