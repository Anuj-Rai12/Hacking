            <!--                app:riv_corner_radius="15dp" />-->

            <TextView
                android:id="@+id/music_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textAlignment="center"
                android:textAppearance="@style/AppTheme.TextAppearance.Body2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/poem_item_image"
                app:layout_constraintStart_toStartOf="@+id/poem_item_image"
                app:layout_constraintTop_toBottomOf="@+id/music_item_image"
