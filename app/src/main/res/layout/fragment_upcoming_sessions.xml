<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">




  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
      android:id="@+id/expConeRefresh"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<androidx.core.widget.NestedScrollView
    android:id="@+id/nested_scroll_viewRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/tncLayout"
    >



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/expConRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="20dp"
        tools:listitem="@layout/upcoming_session_recyclerview_item"
        app:spanCount="2"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>



  </LinearLayout>



</RelativeLayout>

</androidx.core.widget.NestedScrollView>


        <TextView
            android:id="@+id/noDataContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No upcoming session,we will notify you when its there"
            android:layout_centerInParent="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="-6dp"
            android:textAlignment="center"
            android:visibility="gone"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            />

        <LinearLayout
            android:id="@+id/tncLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >


            <TextView
                android:id="@+id/tncText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Condition"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/booking_button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Book Session"
                android:fontFamily="@font/crimson_text_bold"
                android:background="@color/buttonBlue"
                android:textAllCaps="false"
                android:padding="6dp"
                android:visibility="visible"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </RelativeLayout>
  </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>