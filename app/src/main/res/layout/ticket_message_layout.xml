<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="ticketMessageLayoutBinding"
            type="com.uptodd.uptoddapp.support.view.TicketMessage" />
    </data>
    <LinearLayout
        android:id="@+id/ticket_message_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/ticket_message_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            ticketMessage="@{ticketMessageLayoutBinding}"/>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        ticketSender="@{ticketMessageLayoutBinding}">

            <TextView
                android:id="@+id/ticket_message_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                ticketDate="@{ticketMessageLayoutBinding}"/>

            <ImageView
                android:id="@+id/ticket_message_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                ticketStatus = "@{ticketMessageLayoutBinding}"/>

        </LinearLayout>

    </LinearLayout>
</layout>

